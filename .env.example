# Database (for Neon: use your Neon connection string with +asyncpg / +psycopg2)
DATABASE_URL=

# Redis (for rediss:// e.g. Upstash, add ?ssl_cert_reqs=none)
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=change-me-to-a-random-64-char-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=480

# Backend
BACKEND_CORS_ORIGINS=["http://localhost:3000"]
API_V1_PREFIX=/api/v1

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Scanner defaults
SCANNER_MAX_DEPTH_QUICK=2
SCANNER_MAX_PAGES_QUICK=20
SCANNER_MAX_DEPTH_FULL=5
SCANNER_MAX_PAGES_FULL=100
SCANNER_REQUEST_DELAY=2.0
SCANNER_CONCURRENCY=5
